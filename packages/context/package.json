{
  "name": "@neuledge/context",
  "version": "0.2.2",
  "description": "Context management for Neuledge packages",
  "keywords": [],
  "homepage": "https://neuledge.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neuledge/context.git"
  },
  "bugs": {
    "url": "https://github.com/neuledge/context/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "context": "./dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rimraf --glob dist/** && tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "npx biome ci --error-on-warnings",
    "fix": "npx biome check --write",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run test"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Neuledge",
  "license": "Apache-2.0",
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@modelcontextprotocol/sdk": "^1.11.4",
    "better-sqlite3": "^11.9.1",
    "commander": "^14.0.0",
    "ignore": "^7.0.5",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.9.1",
    "rimraf": "^6.0.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.3"
  },
  "tsx": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
